<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#061432"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/bike" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_edtName1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/background"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="20dp"
        android:ems="36"
        android:hint="User Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:editable="false"
        android:id="@+id/profile_edtEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:ems="36"
        android:hint="User Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_edtPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profile_edtRePassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_btnSignup"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/btns"
        android:padding="6dp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />


</androidx.appcompat.widget.LinearLayoutCompat>